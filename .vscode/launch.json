{
  "version": "0.2.0",

  "configurations": [
    {
      "name": "Python Debugger: Run wsgi.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/wsgi.py",
      "console": "integratedTerminal",
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "wsgi.py",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--host=0.0.0.0",
        "--port=9800"
      ],
      "jinja": true,
      "justMyCode": true
    }
  ]
}